rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leer y escribir durante el desarrollo.
    // ¡Asegura esto antes de lanzar a producción!
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 8, 20);
    }
  }
}